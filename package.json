{
  "name": "repo-tools",
  "version": "0.2.2",
  "description": "Useful commands to work with remote repositories",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "keywords": [
    "tools",
    "git"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbarbara/repo-tools.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/repo-tools/issues"
  },
  "homepage": "https://github.com/gilbarbara/repo-tools#readme",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "repo-tools": "dist/cli.js"
  },
  "dependencies": {
    "kolorist": "^1.8.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@gilbarbara/eslint-config": "^0.5.4",
    "@gilbarbara/prettier-config": "^1.0.0",
    "@gilbarbara/tsconfig": "^0.1.0",
    "@size-limit/preset-small-lib": "^9.0.0",
    "@swc/core": "^1.3.94",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/yargs": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "execa": "^5.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "size-limit": "^9.0.0",
    "size-limit-node-esbuild": "^0.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cli && chmod +x dist/cli.js ",
    "build:cli": "tsup",
    "watch": "tsup --watch",
    "clean": "del dist/*",
    "lint": "eslint src test",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watchAll --verbose",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "validate": "npm run lint && npm run typecheck && npm run build && npm run test:coverage && npm run size",
    "size": "size-limit",
    "prepublishOnly": "npm run validate",
    "prepare": "husky install"
  },
  "tsup": {
    "dts": true,
    "entry": [
      "src/cli.ts"
    ],
    "format": [
      "cjs"
    ],
    "sourcemap": true,
    "splitting": false
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "rules": {
      "no-console": "off"
    }
  },
  "prettier": "@gilbarbara/prettier-config",
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!src/cli.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": "/test/.*?\\.(test|spec)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "diagnostics": {
            "ignoreCodes": [
              "TS151001"
            ]
          }
        }
      ]
    },
    "verbose": false
  },
  "size-limit": [
    {
      "name": "CLI",
      "path": "./dist/cli.js",
      "limit": "45 KB"
    }
  ]
}
