{
  "name": "repo-tools",
  "version": "0.1.0",
  "description": "Useful commands to work with remote repositories",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbarbara/repo-tools.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/repo-tools/issues"
  },
  "homepage": "https://github.com/gilbarbara/repo-tools#readme",
  "keywords": [
    "tools",
    "git"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "repo-tools": "lib/cli.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@gilbarbara/tsconfig": "^0.1.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/yargs": "^13.0.2",
    "chalk": "^2.4.2",
    "execa": "^2.0.4",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "yargs": "^13.3.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:ts && chmod +x lib/cli.js ",
    "build:ts": "tsc --outDir lib",
    "watch": "npm run build:ts -- -w",
    "clean": "rimraf lib",
    "lint": "tslint 'src/**/*.ts'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "validate": "npm run lint && npm run build && npm run test:coverage",
    "prepublishOnly": "npm run validate"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "proseWrap": "never"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!src/cli.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "noUnusedLocals": false,
          "noUnusedParameters": false,
          "target": "esnext"
        }
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "./"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "preset": "ts-jest",
    "testRegex": "/test/.*?\\.(test|spec)\\.ts$",
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "ts-node src/index check-remote && npm run validate",
      "post-merge": "ts-node src/index install-packages"
    }
  }
}
